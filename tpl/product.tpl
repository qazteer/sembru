<div class="name_product_block">
	<div class="text_name"><i>%back%</i></div>
</div>
<div class="product_table_class">
	<div class="tr_class">	
		<div class="td_product_text">
			<h4>%title%</h4><br>
			<p>%description%</p>
			<br>
			<p>%title_f%</p>
			<br>
			<p><pre class="pre">%features%</pre></p>
			<br>
			<p>%pr% <span>%price% %curr%</span></p>
			<form action="%link%" method="post">
				<input type="hidden" name="productID" value="%productID%">
				<input type="hidden" name="action" value="edit_in_cart" />
				<input type="submit" name="submit" value="%buy%" class="buy">
			</form>
		</div>
		<div class="td_class_img_product">
			<img src="img/product/%img%" alt="%title%" />
		</div>
	</div>
</div>